{
  "exclude": [
    "dist/"
  ],
  "baseUrl": ".",
  "compilerOptions": {
    "target": "ES2019",
    "strict": true,
    "module": "commonjs",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "rootDir": "lib",
  },
  "moduleResolution": "node",
  "resolveJsonModule": true,
  "types": [
    "vite/client"
  ],
  "include": [
    "lib/**/*.ts",
    "game/**/*.ts",
  ]
}